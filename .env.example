# ===========================================================================
# Wasden Watch — Environment Variables
# ===========================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to git — only .env.example is tracked.

# --- REQUIRED ---
TRADING_MODE=paper          # "paper" or "live" — system halts if unset
USE_MOCK_DATA=true          # Set to "false" to use real data sources

# --- Supabase (optional with mock data) ---
SUPABASE_URL=
SUPABASE_SERVICE_KEY=
# For migrations (pooler URL — URL-encode the password if it has special chars):
DATABASE_URL=
SUPABASE_ANON_KEY=

# --- Frontend ---
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000"]
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# --- Alpaca Trading (optional with mock data) ---
ALPACA_PAPER_API_KEY=
ALPACA_PAPER_SECRET_KEY=
ALPACA_LIVE_API_KEY=
ALPACA_LIVE_SECRET_KEY=

# --- Data APIs (optional with mock data) ---
FINNHUB_API_KEY=
NEWSAPI_API_KEY=

# --- LLM APIs (optional — used by RAG pipeline) ---
CLAUDE_API_KEY=
GEMINI_API_KEY=

# --- MLflow (optional — defaults to local file store) ---
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=wasden-watch-quant

# --- Notifications (optional) ---
SLACK_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL_RECIPIENTS=
