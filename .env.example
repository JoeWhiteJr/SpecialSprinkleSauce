# === Wasden Watch Trading System ===
# Copy this file to .env and fill in values

# Trading Mode — REQUIRED, system halts if unset
# Must be "paper" or "live"
TRADING_MODE=paper

# Mock Data Flag — set to "true" to use mock data instead of Supabase
USE_MOCK_DATA=true

# Supabase
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# LLM APIs
CLAUDE_API_KEY=sk-ant-...
GEMINI_API_KEY=...

# Alpaca Trading
ALPACA_PAPER_API_KEY=...
ALPACA_PAPER_SECRET_KEY=...
ALPACA_LIVE_API_KEY=...
ALPACA_LIVE_SECRET_KEY=...

# Data APIs
NEWSAPI_KEY=...
FINNHUB_API_KEY=...

# Notifications
SIGNAL_NUMBER=...

# Notion API (for ticket management)
# Get your API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_database_id_here

# Frontend
FRONTEND_URL=https://your-app.vercel.app
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
